{% extends 'base.html.twig' %}

{% block title %}Liste des Categories{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 990px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <a  href="{{ path('competition_create') }}"><button type='button' class='btn btn-info'>cr√©e nouvelle competition</button></a>        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover table-condensed">
                <thead>
                    <tr>
                        <th> id</th>
                        <th> nom competition</th>
                        <th> pays competition</th>
{#                        <th> ville competition</th>#}
                        <th> lieu competition</th>
                        <th> date competition</th>
                        <th> modifier</th>
                        <th> supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for competition in competitions %}
                        <tr>
                            <td>{{ competition.getId() }}</td>
                            <td>{{ competition.getNomCompetition() }}</td>
                            <td>{{ competition.getPaysCompetition() }}</td>
{#                            <td>{{ competition.getVilleCompetition() }}</td>#}
                            <td>{{ competition.getLieuCompetition() }}</td>
                            <td>{{ competition.getDateCompetition() }}</td>
                            <td><a  href="{{ path('competition_modification',{'id':competition.getId()}) }}"><button type='button' class='btn btn-info'>modifier</button></a> </td>
                            <td><a  href="{{ path('deleteById_competition',{'id':competition.getId()}) }}"><button type='button' class='btn btn-danger'>supprimer</button></a> </td>

                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
